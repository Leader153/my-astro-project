<style>
  @import url("https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;600;700;800;900&display=swap");

  .hz-page {
    --navy: #08047e;
    --sea: #0f7ab0;
    --gold: #d4a017;
    --gold-l: #f0c040;
    --bg: #f2f5fb;
    --white: #ffffff;
    --text: #000000;
    --text-m: #111111;
    --text-l: #222222;
    font-family: "Rubik", "Segoe UI", Arial, sans-serif;
    color: var(--text);
    background: var(--bg);
