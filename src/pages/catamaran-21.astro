    position: relative;
    min-height: 75vh;
    display: flex;
    align-items: center;
    overflow: hidden;
  }
  .hz-hero-bg-img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
    object-position: center;
  }

  .hz-hero-mobile-wrap {
    display: none;
  }

  @media (max-width: 768px) {
    .hz-hero {
      display: none; /* Hide the full hero on mobile completely */
    }

    .hz-hero-mobile-wrap {
      display: block;
      width: 100vw;
      margin-left: calc(-50vw + 50%);
      margin-right: calc(-50vw + 50%);
      margin-top: -80px; /* Offset the Layout/page padding specifically just to touch the header nav */
      margin-bottom: -30px; /* Pull the title closer to the image */
      overflow: hidden;
      position: relative;
    }

    .mobile-hero-img {
      width: 100%;
      height: 300px;
      min-height: 250px;
      display: block;
      object-fit: cover;
      border-radius: 0;
      box-shadow: none;
    }
  }

  /* â•â• SHARED â•â• */
  .hz-inner {
    max-width: 1120px;
    margin: 0 auto;
    padding: 5rem 1.5rem;
  }
  .hz-section-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  @media (max-width: 768px) {
    .hz-inner {
      padding-top: 2rem;
    }
    .hz-section-header {
      margin-bottom: 1.5rem;
    }
  }
  .hz-section-header h2 {
    font-size: clamp(1.7rem, 3.5vw, 2.4rem);
    font-weight: 800;
    color: var(--text);
    margin: 0 0 0.8rem;
  }
  .hz-section-header p {
    font-size: 1.2rem;
    color: var(--text-l);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.7;
  }

  .hz-services {
    background: var(--bg);
