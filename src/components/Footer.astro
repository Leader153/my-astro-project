<style>
  @import url("https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;600;700;800&display=swap");

  /* ────────────────── WAVE ────────────────── */
  .footer-wave {
    display: block;
    line-height: 0;
    margin-bottom: -2px;
    background: #f2f5fb; /* match page bg */
  }
  .footer-wave svg {
    display: block;
    width: 100%;
    height: 60px;
  }

  /* ────────────────── SHELL ────────────────── */
  .main-footer {
    background: linear-gradient(
      160deg,
      #06046e 0%,
      #08047e 30%,
      #0a5a8a 70%,
      #072060 100%
    );
    color: #fff;
    font-family: "Rubik", "Segoe UI", Arial, sans-serif;
    position: relative;
    overflow: hidden;
  }

  /* subtle radial glow accents */
  .main-footer::before {
    content: "";
    position: absolute;
    width: 600px;
    height: 600px;
    border-radius: 50%;
    background: radial-gradient(
      circle,
      rgba(29, 168, 232, 0.12) 0%,
      transparent 65%
    );
    top: -150px;
    left: -100px;
    pointer-events: none;
  }
  .main-footer::after {
    content: "";
    position: absolute;
    width: 400px;
    height: 400px;
    border-radius: 50%;
    background: radial-gradient(
      circle,
      rgba(212, 160, 23, 0.08) 0%,
      transparent 65%
    );
    bottom: -80px;
    right: 5%;
    pointer-events: none;
  }

  /* ────────────────── INNER GRID ────────────────── */
  .footer-inner {
    display: grid;
    grid-template-columns: 1.6fr 1fr 1fr 1.5fr;
    gap: 3rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 3.5rem 2rem 2.5rem;
    position: relative;
    z-index: 1;
  }

  /* ────────────────── BRAND COL ────────────────── */
  .footer-brand {
    display: inline-flex;
    align-items: center;
    gap: 0.65rem;
    text-decoration: none;
    margin-bottom: 1.1rem;
  }

  .footer-anchor {
    font-size: 2rem;
    filter: drop-shadow(0 2px 6px rgba(0, 0, 0, 0.5));
    transition: transform 0.35s ease;
  }
  .footer-brand:hover .footer-anchor {
    transform: rotate(-15deg) scale(1.15);
  }

  .footer-brand-main {
    font-size: 1.6rem;
    font-weight: 800;
    color: #fff;
    letter-spacing: 3px;
    line-height: 1;
  }
  .footer-brand-sub {
    font-size: 0.65rem;
    color: #ffffff;
    letter-spacing: 2px;
    font-weight: 600;
  }

  .footer-tagline {
    font-size: 0.88rem;
    color: #ffffff;
    line-height: 1.7;
    margin: 0 0 1.5rem;
    max-width: 260px;
    font-weight: 500;
  }

  /* Social icons row */
  .footer-socials {
    display: flex;
    gap: 0.55rem;
    flex-wrap: wrap;
  }

  .social-icon {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.14);
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: all 0.25s ease;
  }
  .social-icon:hover {
    background: var(--c);
    border-color: var(--c);
    color: #fff;
    transform: translateY(-3px);
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.3);
  }

  /* ────────────────── NAV COLS ────────────────── */
  .footer-nav-col ul,
  .footer-contact-items {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-col-title {
    font-size: 0.8rem;
    font-weight: 800;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: #ffffff;
    margin: 0 0 1.1rem;
    display: flex;
    align-items: center;
    gap: 0.6rem;
  }

  .col-title-line {
    display: inline-block;
    width: 24px;
    height: 2px;
    background: linear-gradient(to right, #d4a017, #f0c040);
    border-radius: 2px;
    flex-shrink: 0;
  }

  .footer-nav-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.45rem 0;
    color: #ffffff;
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 600;
    transition:
      color 0.2s,
      gap 0.2s;
    border-bottom: 1px solid rgba(255, 255, 255, 0.15);
  }
  .footer-nav-link:last-child {
    border-bottom: none;
  }

  .link-arrow {
    color: #d4a017;
    opacity: 0;
    font-size: 0.8rem;
    transition:
      opacity 0.2s,
      transform 0.2s;
    transform: translateX(4px);
  }

  .footer-nav-link:hover {
    color: #fff;
    gap: 0.75rem;
  }
  .footer-nav-link:hover .link-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  /* ────────────────── CONTACT COL ────────────────── */
  .footer-contact-items {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
    margin-bottom: 1.25rem;
  }

  .footer-contact-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.65rem 0.8rem;
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.08);
    text-decoration: none;
    color: inherit;
    transition:
      background 0.2s,
      transform 0.2s;
  }
  a.footer-contact-item:hover {
    background: rgba(255, 255, 255, 0.12);
    transform: translateX(-3px);
  }
  .footer-contact-item.no-link {
    cursor: default;
  }

  .contact-item-icon {
    width: 32px;
    height: 32px;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #d4a017;
    flex-shrink: 0;
  }

  .contact-item-label {
    font-size: 0.75rem;
    color: #d4a017;
    font-weight: 700;
    margin-bottom: 0.1rem;
  }
  .contact-item-val {
    font-size: 0.95rem;
    color: #ffffff;
    font-weight: 700;
  }

  /* WhatsApp CTA */
  .footer-wa-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.55rem;
    background: #25d366;
    color: #fff;
    font-weight: 700;
    font-size: 0.88rem;
    padding: 0.75rem 1rem;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.25s ease;
    box-shadow: 0 4px 16px rgba(37, 211, 102, 0.3);
  }
  .footer-wa-btn:hover {
    background: #128c7e;
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(37, 211, 102, 0.4);
  }

  /* ────────────────── BOTTOM BAR ────────────────── */
  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    padding: 1.1rem 2rem;
    position: relative;
    z-index: 1;
  }

  /* top gold line */
  .footer-bottom::before {
    content: "";
    position: absolute;
    top: -1px;
    left: 10%;
    right: 10%;
    height: 1px;
    background: linear-gradient(
      to right,
      transparent,
      rgba(212, 160, 23, 0.5),
      transparent
    );
  }

  .footer-bottom-inner {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 0.5rem;
    font-size: 0.85rem;
    font-weight: 500;
    color: #ffffff;
  }

  .footer-bottom-links {
    display: flex;
    align-items: center;
    gap: 0.6rem;
  }
  .footer-bottom-links a {
    color: #ffffff;
    text-decoration: none;
    transition: color 0.2s;
  }
  .footer-bottom-links a:hover {
    color: #f0c040;
  }
  .sep {
    opacity: 1;
    color: #d4a017;
    font-weight: bold;
  }

  .footer-takanon-note {
    max-width: 1200px;
    margin: 0.6rem auto 0;
    font-size: 0.85rem;
    font-weight: 500;
    color: #ffffff;
    text-align: center;
    padding: 0 2rem;
  }
  .footer-takanon-note a {
    color: #d4a017;
    font-weight: 700;
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: color 0.2s;
  }
  .footer-takanon-note a:hover {
    color: #f0c040;
  }

  /* ────────────────── RESPONSIVE ────────────────── */
  @media (max-width: 1000px) {
    .footer-inner {
      grid-template-columns: 1fr 1fr;
      gap: 2.5rem 2rem;
    }
    .footer-brand-col {
      grid-column: 1 / -1;
    }
    .footer-tagline {
      max-width: 100%;
    }
  }

  @media (max-width: 600px) {
    .footer-inner {
      grid-template-columns: 1fr;
      padding: 2.5rem 1.5rem 2rem;
      gap: 2rem;
    }
    .footer-wave svg {
      height: 40px;
    }

    /* Bottom bar */
    .footer-bottom {
      padding: 1rem 1.5rem;
    }
    .footer-bottom-inner {
