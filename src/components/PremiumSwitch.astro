---
export interface Props {
  href: string;
  title: string;
  subtitle: string;
}

const { href, title, subtitle } = Astro.props;
---

<div class="hz-premium-switch-wrapper">
  <a href={href} class="hz-premium-switch">
    <div class="hps-content">
      <div class="hps-icon">â›µ</div>
      <div class="hps-text">
        <span class="hps-title">{title}</span>
        <span class="hps-subtitle">{subtitle}</span>
      </div>
    </div>
    <div class="hps-arrow">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2.5"
        width="22"
        height="22"
      >
        <polyline points="15 18 9 12 15 6"></polyline>
      </svg>
    </div>
  </a>
</div>

<style>
  .hz-premium-switch-wrapper {
    margin: 4rem auto;
    width: 100%;
    max-width: 800px;
  }
  .hz-premium-switch {
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: linear-gradient(
      155deg,
      #040360 0%,
      #08047e 40%,
      #0a5a8f 70%,
      #072060 100%
    );
    border: 4px solid #d4a017;
    border-radius: 20px;
    padding: 1.5rem 2.5rem;
    text-decoration: none;
    box-shadow: 0 15px 45px rgba(212, 160, 23, 0.3);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    z-index: 1;
  }
  .hz-premium-switch::after {
    content: "";
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: -1;
    background:
      radial-gradient(
        ellipse 70% 60% at 70% 30%,
        rgba(15, 122, 176, 0.3) 0%,
        transparent 55%
      ),
      radial-gradient(
        ellipse 40% 50% at 10% 80%,
        rgba(212, 160, 23, 0.1) 0%,
        transparent 50%
      );
  }
  .hz-premium-switch:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 55px rgba(212, 160, 23, 0.4);
  }
  .hps-content {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }
  .hps-icon {
    font-size: 2.8rem;
    line-height: 1;
  }
  .hps-text {
    display: flex;
    flex-direction: column;
    text-align: right;
  }
  .hps-title {
    font-size: 1.5rem;
    font-weight: 800;
    color: #ffffff;
    margin-bottom: 0.2rem;
  }
  .hps-subtitle {
    font-size: 1.1rem;
    color: #ffffff;
  }
  .hps-arrow {
    background: linear-gradient(135deg, #d4a017, #f0c040); /* gold */
    color: #08047e;
    width: 55px;
    height: 55px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 6px 20px rgba(212, 160, 23, 0.4);
    transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    flex-shrink: 0;
  }
  .hz-premium-switch:hover .hps-arrow {
    transform: scale(1.1) translateX(-5px);
  }

  @media (max-width: 768px) {
    .hz-premium-switch-wrapper {
      margin: 2rem auto;
    }
    .hz-premium-switch {
      padding: 0.8rem 1rem;
      border-radius: 14px;
      border-width: 3px;
    }
    .hps-content {
      gap: 0.75rem;
    }
    .hps-icon {
      font-size: 2rem;
    }
    .hps-title {
      font-size: 1.15rem;
      margin-bottom: 0.1rem;
    }
    .hps-subtitle {
      font-size: 0.85rem;
      line-height: 1.25;
    }
    .hps-arrow {
      width: 38px;
      height: 38px;
    }
    .hps-arrow svg {
      width: 18px;
      height: 18px;
    }
  }
</style>
